{
  "header-layout.desktop#full": {
    "children": [
      "flex-layout.row#1-desktop#full",
      "flex-layout.row#2-desktop#full",
      "sticky-layout#3-deskotp-full"
    ]
  },
  "flex-layout.row#1-desktop#full": {
    "children": [
      "notification.bar#ambiente",
      "notification.bar#instagram",
      "notification.bar#entrega",
      "notification.bar#duvidas"
    ],
    "props": {
      "fullWidth": true
    }
  },
  "flex-layout.row#2-desktop#full": {

    "children": [
      "flex-layout.col#logo-desktop",
      "search-bar",
      "flex-layout.col#menu-usuario",
      "minicart.v2"
    ],
    "props": {
      "blockClass": "main-header-desktop",
      "verticalAlign": "middle",
      "marginTop": 5,
      "marginBottom": 5
    }
  },
  "flex-layout.col#logo-desktop": {
    "props": {
      "verticalAlign": "middle"
    },
    "children": [
      "logo#desktop"
    ]
  },
  "logo#desktop": {
    "props": {
      "title": "Logo",
      "href": "/",
      "url": "assets/estacao-store-logo.svg",
      "width": "205"
    }
  },
  "flex-layout.col#spacer": {
    "props": {
      "width": "grow"
    }
  },
  "flex-layout.col#menu-usuario": {
    "children": [
      //"vtex.menu@2.x:menu#menu-usuario"
    ]
  },
  "sticky-layout#3-deskotp-full": {
    "props": {
      "blockClass": "sticky-header"
    },
    "children": [
      "flex-layout.row#3-desktop"
    ]
  },
  "flex-layout.row#3-desktop#full": {
    "props": {
      "blockClass": "main-header",
      "horizontalAlign": "center",
      "verticalAlign": "center",
      "preventHorizontalStretch": true,
      "preventVerticalStretch": true,
      "fullWidth": true
    },
    "children": [
      "flex-layout.col#spacer",
      "vtex.menu@2.x:menu#websites",
      "flex-layout.col#spacer"
    ]
  }
}
